#!/usr/bin/env bash
#sss
PID_FILE="/var/run/myscript.pid"

# Try to create PID file, fail loudly if not possible
if ! printf '%s\n' "$$" > "$PID_FILE" 2>/dev/null; then
    echo "Error: cannot write PID file to $PID_FILE. Run as root." >&2
    exit 1
fi

# Ensure PID file removed on exit (in case of normal exit)
cleanup() {
    rm -f "$PID_FILE"
}
trap cleanup EXIT

# SIGTERM handler: print message, remove pid file and exit
sigterm_handler() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# SIGINT handler (Ctrl+C): print message, but keep running
sigint_handler() {
    echo "Y U no love me?!"
}

# SIGQUIT handler: remove pid file and exit
sigquit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

trap 'sigterm_handler' SIGTERM
trap 'sigint_handler' SIGINT
trap 'sigquit_handler' SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
